{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [2, 2],
        "semi": ["error", "always"],
        "quotes": ["error", "single"], 
        "comma-dangle": ["error", "never"],
        "quote-props": ["error", "consistent-as-needed"],
        "no-unused-vars": "error",
        "no-undef": "error", 
        "no-console": "warn",
        "eol-last": "error",
        "no-multiple-empty-lines": ["error", { "max": 2 }],
        "no-extra-parens": "error",
        "arrow-parens": ["error", "as-needed"],
        "arrow-spacing": "error",
        "no-var": "error",
        "prefer-const": "error",
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"],
        "camelcase": "error"
    }
}
